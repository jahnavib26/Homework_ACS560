package com.acs560.restaurantsales.restaurant_sales.services;

public interface SalesAnalysisService {
    double calculateAverageSalesByItem(String itemName, String month);
    double calculateAverageSalesByItem(String itemName, String month, int range);
    
    // New method to calculate max sales
    double calculateMaxSalesByItem(String itemName, String month);
    
    // New method to calculate min sales
    double calculateMinSalesByItem(String itemName, String month);
}

